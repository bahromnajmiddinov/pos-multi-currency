<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ═══ pos.config form: inject multi-currency settings ═══ -->
        <record id="pos_multi_currency_config_form" model="ir.ui.view">
            <field name="name">pos.config.multi.currency.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">

                <!-- Insert after ePos Printer -->
                <xpath expr="//setting[@id='other_devices']" position="after">

                    <setting id="multi_currency_settings"
                            string="Multi Currency"
                            help="Accept payments in multiple currencies in POS.">

                        <field name="multi_currency_enabled"/>

                        <div class="content-group mt16"
                            invisible="not multi_currency_enabled">

                            <field name="multi_currency_ids"
                                widget="many2many_tags"/>

                            <field name="multi_currency_allow_rate_edit"/>

                        </div>

                    </setting>

                </xpath>

            </field>
        </record>

    </data>
</odoo>
