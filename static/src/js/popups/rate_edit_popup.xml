<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_multi.RateEditPopup">
        <Dialog title="'Edit Exchange Rate'" size="'md'">
            <div class="mc-rate-edit-content">
                
                <!-- Rate Info -->
                <div class="mc-info-section">
                    <div class="mc-info-row">
                        <span class="mc-info-label">Base Currency:</span>
                        <span class="mc-info-value"><t t-esc="baseCurrencyName" /></span>
                    </div>
                    <div class="mc-info-row">
                        <span class="mc-info-label">Payment Currency:</span>
                        <span class="mc-info-value"><t t-esc="paymentCurrencyName" /></span>
                    </div>
                    <div class="mc-info-row">
                        <span class="mc-info-label">Market Rate:</span>
                        <span class="mc-info-value mc-market">
                            1 <t t-esc="baseCurrencyName" /> = <t t-esc="marketRateFormatted" /> <t t-esc="paymentCurrencyName" />
                        </span>
                    </div>
                </div>

                <!-- Rate Input -->
                <div class="mc-input-section">
                    <label class="mc-input-label">
                        1 <t t-esc="baseCurrencyName" /> =
                    </label>
                    <div class="mc-input-row">
                        <input
                            type="number"
                            class="mc-rate-input"
                            t-model.number="state.editedRate"
                            step="0.000001"
                            min="0.000001"
                            t-on-input="onRateChange"
                        />
                        <span class="mc-currency-label"><t t-esc="paymentCurrencyName" /></span>
                        <button class="mc-reset" t-on-click="resetToMarket">
                            <i class="fa fa-undo" />
                        </button>
                    </div>
                </div>

                <!-- Preview -->
                <div class="mc-preview-section" t-if="props.orderAmount">
                    <div class="mc-preview-row">
                        <span>Order Amount:</span>
                        <span><t t-esc="formatAmount(props.orderAmount, baseCurrency)" /></span>
                    </div>
                    <div class="mc-preview-row mc-converted">
                        <span>Converted:</span>
                        <span><t t-esc="convertedAmountFormatted" /></span>
                    </div>
                </div>

                <!-- Warning -->
                <div class="mc-warning" t-if="state.warning">
                    <i class="fa fa-exclamation-triangle" />
                    <t t-esc="state.warning" />
                </div>

            </div>

            <t t-set-slot="footer">
                <div class="mc-footer">
                    <button class="mc-btn mc-btn-cancel" t-on-click="onCancel">
                        Cancel
                    </button>
                    <button
                        class="mc-btn mc-btn-confirm"
                        t-att-class="{ 'disabled': state.warning }"
                        t-on-click="onConfirm"
                    >
                        <span>Apply Rate</span>
                        <i class="fa fa-check" />
                    </button>
                </div>
            </t>
        </Dialog>
    </t>

</templates>