<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_multi.CurrencySelectionPopup">
        <Dialog title="props.title || 'Select Payment Currency'" size="'lg'">
            <div class="mc-popup-content">
                
                <!-- Subtitle -->
                <div class="mc-subtitle" t-if="props.subtitle">
                    <t t-esc="props.subtitle" />
                </div>

                <!-- Currency grid - Clean & Minimal -->
                <div class="mc-currency-grid">
                    <t t-foreach="currencies" t-as="cur" t-key="cur.id">
                        <button
                            class="mc-currency-card"
                            t-att-class="{
                                'mc-selected': selectedCurrencyId === cur.id,
                                'mc-base': cur.id === baseCurrencyId,
                            }"
                            t-on-click="() => this.selectCurrency(cur)"
                        >
                            <!-- Currency Symbol -->
                            <div class="mc-symbol">
                                <t t-esc="cur.symbol || cur.name.substring(0, 1)" />
                            </div>
                            
                            <!-- Currency Name -->
                            <div class="mc-name">
                                <t t-esc="cur.name" />
                            </div>
                            
                            <!-- Exchange Rate or Base Badge -->
                            <div class="mc-rate">
                                <t t-if="cur.id === baseCurrencyId">
                                    <span class="mc-base-badge">BASE</span>
                                </t>
                                <t t-else="">
                                    <span class="mc-rate-text">
                                        1 = <t t-esc="formatRate(cur.id)" />
                                    </span>
                                </t>
                            </div>
                            
                            <!-- Preview Amount -->
                            <div class="mc-preview" t-if="props.orderAmount">
                                <t t-esc="previewAmount(cur)" />
                            </div>
                            
                            <!-- Selection Indicator -->
                            <div class="mc-check" t-if="selectedCurrencyId === cur.id">
                                <i class="fa fa-check-circle" />
                            </div>
                        </button>
                    </t>
                </div>

                <!-- Rate Edit Section (Minimalistic) -->
                <div class="mc-rate-edit" t-if="showRateEdit">
                    <div class="mc-rate-edit-header">
                        <i class="fa fa-pencil" />
                        <span>Custom Rate</span>
                    </div>
                    <div class="mc-rate-edit-input">
                        <span class="mc-rate-label">
                            1 <t t-esc="baseCurrencyName" /> =
                        </span>
                        <input
                            type="number"
                            class="mc-rate-field"
                            t-model.number="state.manualRate"
                            step="0.000001"
                            min="0.000001"
                            t-on-input="onRateInput"
                            placeholder="Enter rate"
                        />
                        <span class="mc-rate-currency">
                            <t t-esc="selectedCurrencyName" />
                        </span>
                        <button class="mc-reset-btn" t-on-click="resetRate">
                            <i class="fa fa-undo" />
                        </button>
                    </div>
                    <div class="mc-rate-warning" t-if="state.rateWarning">
                        <i class="fa fa-exclamation-triangle" />
                        <t t-esc="state.rateWarning" />
                    </div>
                </div>

            </div>

            <!-- Footer -->
            <t t-set-slot="footer">
                <div class="mc-footer">
                    <button class="mc-btn mc-btn-cancel" t-on-click="onCancel">
                        Cancel
                    </button>
                    <button
                        class="mc-btn mc-btn-confirm"
                        t-att-class="{ 'disabled': !selectedCurrencyId }"
                        t-on-click="onConfirm"
                    >
                        <span>Confirm</span>
                        <i class="fa fa-check" />
                    </button>
                </div>
            </t>
        </Dialog>
    </t>

</templates>